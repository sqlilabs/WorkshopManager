# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.Application.welcome()
GET 	/workshops					controllers.Application.workshops()

# Workshops
GET 	/workshops/add				controllers.WorkshopController.blankWorkshop()
POST    /workshops/add				controllers.WorkshopController.saveWorkshop(idWorkshop: Long)
POST	/workshop/:id/action		controllers.WorkshopController.actionWorkshop(id: Long)
POST	/workshops/:id/delete		controllers.WorkshopController.deleteWorkshop(id: Long)
GET		/workshops/:id/plan			controllers.WorkshopController.planWorkshop(id: Long)
POST    /workshops/plan				controllers.WorkshopController.saveWorkshopSession(id: Long)

# Application
GET     /logout						controllers.AuthentificationController.deconnection()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# OAuth 2.0 Google
GET 	/oauth2callback				controllers.AuthentificationController.callback()				
